
var basePrice = 120;
var shippingDest = "Canada"
var isMember = true;


var adjustedPrice = basePrice;
var shipping = 0;
var tax = 0;
var totalPrice = 0;



if (basePrice > 50 && shippingDest == "America") {
    shipping = 0
}
else if(basePrice > 100 && (shippingDest == "Mexico" || shippingDest == "Canada")){
 shipping = 0
}
else if (shippingDest == "America") {
    shipping = 5
}
else if (shippingDest == "America") {
    shipping = 15;
}
if (isMember) {
    adjustedPrice = basePrice * 0.85
}

if (shippingDest == "America") {
    tax = 0.1 * adjustedPrice;
}

else if (shippingDest == "Canada") {
    tax = 0.2 * adjustedPrice;
}

console.log(adjustedPrice + shipping + tax)