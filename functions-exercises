function increaseScore(num) {
score = score + num
}

function getDoubleScore(num) {
    return score * 2
}

function factorial(num) {
    if (num <= 2) {
        return 1;
    }
return num * factorial(num - 1);
}

console.log("Factorial: " + (factorial(6)));

function triangularSum(num) {
    if (num < 0) {
        return 0;
    }
    return num + triangularSum(num - 1)
}

console.log("Triangular Sum: " + (triangularSum(10)));

function fibonacci(num){
    if (num <= 1 ) {
   return num;
    }
    return fibonacci(num-1) + fibonacci(num-2)
}

console.log("Fibonacci: " + (fibonacci(3)));